<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:stretchColumns="1"
	>
<TableRow>
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="摘要："
	android:textSize="16sp"
	/>	

<TextView
    android:id="@+id/task_name"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:selectAllOnFocus="true" />

</TableRow>
<TableRow>
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="需求人："
	android:textSize="16sp"
	/>	

<TextView
    android:id="@+id/demand_person"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:selectAllOnFocus="true" />

</TableRow>
<TableRow>
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="办理人："
	android:textSize="16sp"
	/>	

<TextView
    android:id="@+id/exec_person"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:selectAllOnFocus="true" />

</TableRow>
<TableRow>
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="时间："
	android:textSize="16sp"
	/>	

<TextView
    android:id="@+id/app_time"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:selectAllOnFocus="true" />

</TableRow>
<TableRow>
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="预计完成："
	android:textSize="16sp"
	/>	

<TextView
    android:id="@+id/finish_time"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:selectAllOnFocus="true" />

</TableRow>
<TableRow>
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="预计工时："
	android:textSize="16sp"
	/>	

<TextView
    android:id="@+id/finish_period"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:selectAllOnFocus="true" />

</TableRow>
<TableRow
    android:layout_height="fill_parent"
    android:layout_weight="1">
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="任务详情："
	android:textSize="16sp"
	/>	

<TextView
    android:id="@+id/task_detail_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:selectAllOnFocus="true" />

</TableRow>
<TableRow
    android:layout_height="fill_parent"
    android:layout_weight="1">
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="备注："
	android:textSize="16sp"
	/>	

<TextView
    android:id="@+id/task_comment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:selectAllOnFocus="true" />

</TableRow>
<TableRow>
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="任务状态："
	android:textSize="16sp"
	/>	
<TextView
    android:id="@+id/task_status"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:selectAllOnFocus="true" />
	/>

</TableRow>
<Button
    android:id="@+id/app_task"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="申请任务" />

<TableRow>
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="转到："
	android:textSize="16sp"
	/>	
<!-- 定义了一个Spinner组件，
	指定该显示该Spinner组件的数组 -->
<org.testxxx.widget.RecallableSpinner
    android:id="@+id/task_redirection"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:entries="@array/task_redirect_options" 
	android:prompt="@string/redirect_to"
	/>

</TableRow>
</TableLayout>
